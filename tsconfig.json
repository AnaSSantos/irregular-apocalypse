{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./cypress/**"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false,
    "useCache": true
  }
}
