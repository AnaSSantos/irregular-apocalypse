{
  "private": true,
  "name": "irregular-apocalypse",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn -s serve || yarn -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "format": "prettier-standard 'src/**/*.{js,ts,tsx,json,css,md}'",
    "test": "yarn jest && start-server-and-test start http://localhost:8080 cypress:run",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts,tsx,json,css,md}": [
        "prettier-standard",
        "tslint",
        "git add"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js",
      "\\.(css)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^2.0.1",
    "@types/jest": "^23.3.1",
    "@types/ramda": "^0.25.36",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "cypress": "^3.1.0",
    "dom-testing-library": "^3.1.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^23.0.1",
    "jest-cli": "^23.0.1",
    "jsverify": "^0.8.3",
    "lint-staged": "^7.0.5",
    "preact-cli": "^2.0.1",
    "preact-cli-plugin-typescript": "^0.2.2",
    "preact-testing-library": "^0.2.1",
    "prettier-standard": "^8.0.0",
    "start-server-and-test": "^1.7.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.3.3"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "emotion": "^9.2.6",
    "localforage": "^1.7.2",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-emotion": "^9.2.6",
    "preact-helmet": "^4.0.0-alpha-3",
    "preact-router": "^2.5.7",
    "ramda": "^0.25.0"
  }
}
