{
  "private": true,
  "name": "irregular-apocalypse",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn -s watch || yarn -s watch",
    "build": "NODE_ENV=production preact build",
    "watch": "preact watch",
    "lint": "eslint '{cypress,src}/**/*.{ts,tsx}'",
    "format": "prettier --write '{cypress,src}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "pretest": "yarn lint",
    "test": "yarn jest && start-server-and-test start http://localhost:8080 cypress:run",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{cypress,src}/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "{cypress,src}/**/*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.0.2",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@types/jest": "^24.0.9",
    "@types/ramda": "^0.26.14",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "autoprefixer": "^9.6.0",
    "cssnano": "^4.1.10",
    "cypress": "^3.1.1",
    "dom-testing-library": "^4.0.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-standard": "^4.0.0",
    "fast-check": "^1.7.1",
    "husky": "^3.0.0",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^24.1.0",
    "lint-staged": "^9.0.0",
    "postcss-loader": "^3.0.0",
    "preact-cli": "^3.0.0-rc.2",
    "preact-render-to-string": "^5.0.4",
    "preact-testing-library": "^0.4.0",
    "prettier": "^1.17.0",
    "start-server-and-test": "^1.7.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "localforage": "^1.7.2",
    "preact": "^10.0.0-beta.3",
    "preact-helmet": "^4.0.0-alpha-3",
    "preact-router": "^3.0.0",
    "ramda": "^0.26.1",
    "tailwindcss": "^1.0.4"
  }
}
