{
  "private": true,
  "name": "irregular-apocalypse",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "tslint src",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "if-env": "^1.0.0",
    "jest": "^22.0.1",
    "preact-cli": "^2.0.1",
    "preact-cli-plugin-typescript": "^0.2.2",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0"
  },
  "dependencies": {
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7"
  }
}
