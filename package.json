{
  "private": true,
  "name": "irregular-apocalypse",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn -s serve || yarn -s watch",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "watch": "preact watch",
    "lint": "tslint --project tsconfig.tslint.json '{cypress,src}/**/*.{ts,tsx}'",
    "format": "prettier --write '{cypress,src}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "pretest": "yarn lint",
    "test": "yarn jest && start-server-and-test start http://localhost:8080 cypress:run",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{cypress,src}/**/*.{ts,tsx}": [
        "prettier --write",
        "tslint --project tsconfig.tslint.json",
        "git add"
      ],
      "{cypress,src}/**/*.{js,json,css,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js",
      "\\.(css)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@cypress/webpack-preprocessor": "^4.0.2",
    "@types/jest": "^24.0.9",
    "@types/ramda": "^0.25.36",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.4",
    "cypress": "^3.1.1",
    "dom-testing-library": "^3.1.0",
    "fast-check": "^1.7.1",
    "husky": "^1.1.4",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.0.4",
    "preact-cli": "^2.0.1",
    "preact-testing-library": "^0.3.0",
    "prettier": "^1.17.0",
    "start-server-and-test": "^1.7.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "emotion": "^9.2.6",
    "localforage": "^1.7.2",
    "preact": "^8.2.6",
    "preact-emotion": "^9.2.6",
    "preact-helmet": "^4.0.0-alpha-3",
    "preact-router": "^2.5.7",
    "ramda": "^0.26.1"
  }
}
