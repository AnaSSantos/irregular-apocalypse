{
  "private": true,
  "name": "irregular-apocalypse",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "tslint src",
    "format": "prettier-standard 'src/**/*.{js,ts,tsx,json,css,md}'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "jest"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts,tsx,json,css,md}": ["prettier-standard", "git add"]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "husky": "^0.14.3",
    "if-env": "^1.0.0",
    "jest": "^22.0.1",
    "lint-staged": "^6.0.0",
    "preact-cli": "^2.0.1",
    "preact-cli-plugin-typescript": "^0.2.2",
    "prettier-standard": "^8.0.0",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.3.3"
  },
  "dependencies": {
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7"
  }
}
